@using Gorsel_vize.Models.Entity
@model List<tbl_rapor1>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/MainLayout.cshtml";
}

<table class="table table-bordered">
    <tr>
        <th>Rapor ID</th>
        <th>Rapor Adı</th>
        <th>Rapor Bilgi</th>
        <th>Başlangıç Tarihi</th>
        <th>Ayrılış Tarihi</th>
        <th>SİL</th>
        <th>GÜNCELLE</th>



    </tr>
    <tbody>
        @foreach (var ktgr in Model)
        {
            <tr>
                <td>@ktgr.rid</td>
                <td>@ktgr.kisiad</td>
                <td>@ktgr.kisibilgi</td>
                <td>@ktgr.kisibas</td>
                <td>@ktgr.kisibit</td>

                <td><a href="/Rapor/SIL/@ktgr.rid" class="btn btn-danger">SİL</a></td>
                <td><a href="/Rapor/Guncelle/@ktgr.rid" class="btn btn-success">GÜNCELLE</a></td>

            </tr>
        }
    </tbody>
</table>
<a href="/Rapor/Ekle/" class="btn btn-primary">Yeni Rapor Ekle</a>
